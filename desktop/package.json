{
  "name": "agenda-desktop",
  "version": "1.0.0",
  "description": "Versi√≥n de escritorio de la Agenda",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder -mw"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.3"
  },
  "build": {
    "appId": "com.agenda.app",
    "productName": "Agenda",
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
